            e.preventDefault(); // prevent page refresh
            console.log("hi");
            var form = $(this)[0];          // raw DOM form element
            var formData = new FormData(form); // captures files + inputs


            $.ajax({
                url: '/Admin/Slide/SaveEditSlide',
                type: 'POST',
                data: formData,
                processData: false,   // tell jQuery not to convert to query string
                contentType: false,   // tell jQuery not to set content-type header
                success: function (response) {

                    if (response.success) {
                        // Set the message and show the modal
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    } else if (response.html) {
                        // Validation failed - replace the modal content with validation errors
                        $("#EditSlideModal").html(result);
                        var modal = new bootstrap.Modal(document.getElementById('editSlideModal'));
                        modal.show();
                    }else {

                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    }

                },
                error: function (xhr, status, error) {
                    console.error("AJAX Error:", error);       // short message
                    console.error("Status:", status);          // status text (e.g. error, timeout)
                    console.error("Response:", xhr.responseText); // full response from server
                    alert("Error: " + error + "\n" + xhr.responseText); // optional alert
                }

            });
        });

        $(document).on('submit', '#SlideForm', function (e) {
            e.preventDefault(); // prevent page refresh
            console.log("Submitting with file...");

            var form = $(this)[0];          // raw DOM form element
            var formData = new FormData(form); // captures files + inputs

            $.ajax({
                url: '/Admin/Slide/SaveNewSlide',
                type: 'POST',
                data: formData,
                processData: false,   // tell jQuery not to convert to query string
                contentType: false,   // tell jQuery not to set content-type header
                success: function (response) {
                    if (response.success) {
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    } else if (response.html) {
                        $("#AddSlideModal").html(response.html);
                        var modal = new bootstrap.Modal(document.getElementById('addSlideModal'));
                        modal.show();
                    } else {
                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    }
                },
                error: function (xhr, status, error) {
                    console.error("AJAX Error:", error);
                    console.error("Status:", status);
                    console.error("Response:", xhr.responseText);
                    alert("Error: " + error + "\n" + xhr.responseText);
                }
            });
        });

        // Admin courses page functionality
        document.addEventListener('DOMContentLoaded', function () {
            // Update active navigation
            const navLinks = document.querySelectorAll('.admin-sidebar .nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function () {
                    navLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                });
            });


            // Search functionality
            const searchInput = document.querySelector('.search-box input');
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const SlideCards = document.querySelectorAll('.Slide-card');

                SlideCards.forEach(card => {
                    const SlideTitle = card.querySelector('h6').textContent.toLowerCase();
                    const courseName = card.querySelector('small').textContent.toLowerCase();

                    if (SlideTitle.includes(searchTerm) || courseName.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Course CRUD functions
        function editSlide(SlideId) {
            console.log(SlideId);
            $.ajax({
                url: "/Admin/Slide/EditSlide?SlideId=" + SlideId, success: function (result) {


                    $("#EditSlideModal").html(result);
                    const editModal = new bootstrap.Modal(document.getElementById('editSlideModal'));
                    editModal.show();
                }
            });


        }

        function deleteSlide(SlideId) {
            console.log(SlideId);
            // Change modal content for confirmation
            $('#notificationModalLabel').text("Confirm Deletion");
            $('#notificationModalBody').text("Are you sure you want to delete this Slide? This action cannot be undone.");

            // Temporarily replace the footer with Cancel + Delete buttons
            var originalFooter = $('#notificationModal .modal-footer').html();
            $('#notificationModal .modal-footer').html(`
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn-sm" id="confirmDeleteBtn">Delete</button>
            `);

            // Show the modal
            $('#notificationModal').modal('show');

            // Bind Delete button action
            $(document).off('click', '#confirmDeleteBtn').on('click', '#confirmDeleteBtn', function () {
                $.ajax({
                    url: '/Admin/Slide/DeleteSlide',
                    type: 'POST',
                    data: { id: SlideId },
                    success: function (response) {
                        if (response.success) {
                            $('#notificationModalLabel').text("Success");
                            $('#notificationModalBody').text(response.message);
                            $('#notificationModal').on('hidden.bs.modal', function () {
                                location.reload();
                            });
                        } else {
                            $('#notificationModalLabel').text("Error");
                            $('#notificationModalBody').text(response.message);
                        }

                        // Restore footer back to original (OK button)
                        $('#notificationModal .modal-footer').html(originalFooter);

                        // Optionally remove course card from DOM if you have course-{id} wrapper
                        $(`#course-${SlideId}`).fadeOut(500, function () {
                            $(this).remove();
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error:", error);
                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text("Error: " + error + "\n" + xhr.responseText);

                        // Restore footer to original
                        $('#notificationModal .modal-footer').html(originalFooter);
                    }
                });
            });
        }


    </script>
}
