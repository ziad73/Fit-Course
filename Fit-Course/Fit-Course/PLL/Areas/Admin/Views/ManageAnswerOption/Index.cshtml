                        var modal = new bootstrap.Modal(document.getElementById('addSectionModal'));
                        modal.show();
                    } else {

                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    }

                },
                error: function (xhr, status, error) {
                    console.error("AJAX Error:", error);       // short message
                    console.error("Status:", status);          // status text (e.g. error, timeout)
                    console.error("Response:", xhr.responseText); // full response from server
                    alert("Error: " + error + "\n" + xhr.responseText); // optional alert
                }

            });
        });

        // Admin courses page functionality
        document.addEventListener('DOMContentLoaded', function () {
            // Update active navigation
            const navLinks = document.querySelectorAll('.admin-sidebar .nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function () {
                    navLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                });
            });


            // Search functionality
            const searchInput = document.querySelector('.search-box input');
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const sectionCards = document.querySelectorAll('.section-card');

                sectionCards.forEach(card => {
                    const sectionTitle = card.querySelector('h6').textContent.toLowerCase();
                    const courseName = card.querySelector('small').textContent.toLowerCase();

                    if (sectionTitle.includes(searchTerm) || courseName.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Course CRUD functions
        function editSection(sectionId) {
            console.log(sectionId);
            $.ajax({
                url: "/Admin/Section/EditSection?sectionId=" + sectionId, success: function (result) {


                    $("#EditSectionModal").html(result);
                    const editModal = new bootstrap.Modal(document.getElementById('editSectionModal'));
                    editModal.show();
                }
            });


        }

        function deleteSection(sectionId) {
            console.log(sectionId);
            // Change modal content for confirmation
            $('#notificationModalLabel').text("Confirm Deletion");
            $('#notificationModalBody').text("Are you sure you want to delete this section? This action cannot be undone.");

            // Temporarily replace the footer with Cancel + Delete buttons
            var originalFooter = $('#notificationModal .modal-footer').html();
            $('#notificationModal .modal-footer').html(`
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn-sm" id="confirmDeleteBtn">Delete</button>
            `);

            // Show the modal
            $('#notificationModal').modal('show');

            // Bind Delete button action
            $(document).off('click', '#confirmDeleteBtn').on('click', '#confirmDeleteBtn', function () {
                $.ajax({
                    url: '/Admin/Section/DeleteSection',
                    type: 'POST',
                    data: { id: sectionId },
                    success: function (response) {
                        if (response.success) {
                            $('#notificationModalLabel').text("Success");
                            $('#notificationModalBody').text(response.message);
                            $('#notificationModal').on('hidden.bs.modal', function () {
                                location.reload();
                            });
                        } else {
                            $('#notificationModalLabel').text("Error");
                            $('#notificationModalBody').text(response.message);
                        }

                        // Restore footer back to original (OK button)
                        $('#notificationModal .modal-footer').html(originalFooter);

                        // Optionally remove course card from DOM if you have course-{id} wrapper
                        $(`#course-${sectionId}`).fadeOut(500, function () {
                            $(this).remove();
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error:", error);
                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text("Error: " + error + "\n" + xhr.responseText);

                        // Restore footer to original
                        $('#notificationModal .modal-footer').html(originalFooter);
                    }
                });
            });
        }


    </script>
}
