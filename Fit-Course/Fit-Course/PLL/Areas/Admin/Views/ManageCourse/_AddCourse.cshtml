<!-- Add Course Modal -->


@model ManageCourseDTO

<div class="modal fade" id="addCourseModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="courseForm" asp-controller="Course" asp-action="SaveNewCourse" enctype="multipart/form-data" method="post">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Course Title</label>
                            <input type="text" class="form-control"  asp-for="@Model.CourseDTO.Title">
                            <div class="text-danger">
                                <span asp-validation-for="@Model.CourseDTO.Title"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" rows="4" placeholder="Describe your course..." asp-for="@Model.CourseDTO.Description"></textarea>
                        <div class="text-danger">
                            <span asp-validation-for="@Model.CourseDTO.Description"></span>
                        </div>
                    </div>

                    <div class="row">
@*                          <div class="col-md-6 mb-3">
                             <label class="form-label">Instructor</label>
                             <select class="form-select" required asp-for="@Model.CourseDTO.InstructorId">
                                 <option value="" selected>Select Instructor</option>
                                 @foreach(var i in Model.Instructors)
                                 {
                                     <option value="@i.Id">@i.FullName</option>
                                 }
                               
                             </select>
                             <div class="text-danger">
                                 <span asp-validation-for="@Model.CourseDTO.InstructorId"></span>
                             </div>
                         </div> *@
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select"  asp-for="@Model.CourseDTO.Status">
                                <option value="">Select Status</option>
                                <option value="draft">Draft</option>
                                <option value="published">Published</option>
                                
                            </select>
                            <div class="text-danger">
                                <span asp-validation-for="@Model.CourseDTO.Status"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Price ($)</label>
                            <input type="number" class="form-control" min="0" step="0.01" asp-for="@Model.CourseDTO.Price">
                            <div class="text-danger">
                                <span asp-validation-for="@Model.CourseDTO.Price"></span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Course Image</label>
                            <input type="file" class="form-control"  asp-for="@Model.CourseDTO.ImageUrl">

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" >Save Course</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>
