
   @{
    Layout = "_AdminLayout";
   }
<partial name="_NotificationModal" />
    <!-- Main Content -->
<div class="col-md-9 col-lg-10 p-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Course Management</h2>
            <p class="text-muted mb-0">Manage all courses, content, and learning materials.</p>
        </div>
        <div>
            <button class="btn btn-primary me-2" onclick="AddCourseModal()">
                <i class="fas fa-plus me-2"></i>Add New Course
            </button>
           
        </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="form-control" placeholder="Search courses...">
                </div>
            </div>
               
        </div>
    </div>

    <!-- Bulk Actions -->
    <div class="bulk-actions py-3">
        <div class="row justify-content-end">
            <div class="col-md-6 text-end">
                <div class="btn-group" role="group" aria-label="Bulk actions">
                    <button onclick="GetAllCourses()" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-list me-1"></i> All Selected
                    </button>
                    <button onclick="GetAllCoursesPublished()" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-check me-1"></i> Publish Selected
                    </button>
                    <button onclick="GetAllCoursesDraft()" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-times me-1"></i> Draft Selected
                    </button>
                </div>
            </div>
        </div>
    </div>


    <!-- Courses Grid -->
    
        <!-- Course Card  -->
       <div id="AllCourses">

       </div>
    
    <!-- Pagination -->
    <div class="pagination-container">
        <nav aria-label="Course pagination">
            <ul class="pagination justify-content-center mb-0">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
  </div>
       
<div id="AddCourseModal"></div>

<div id="EditCourseModal"></div>

@section Scripts{
    <script>
        window.onload = async function () {
          
            await GetAllCourses();
        };
        function GetAllCourses() {

            console.log("hi");
            $.ajax({
                url: "/Admin/Course/AllCourses", success: function (result) {

                    $("#AllCourses").html(result);

                }
            });

        };
        function GetAllCoursesPublished() {

            console.log("hi");
            $.ajax({
                url: "/Admin/Course/AllCoursesPublished", success: function (result) {

                    $("#AllCourses").html(result);

                }
            });

        };
        function GetAllCoursesDraft() {

            console.log("hi");
            $.ajax({
                url: "/Admin/Course/AllCoursesDraft", success: function (result) {

                    $("#AllCourses").html(result);

                }
            });

        };
        function AddCourseModal() {

            console.log("hi");
            $.ajax({
                url: "/Admin/Course/AddCourse", success: function (result) {


                    $("#AddCourseModal").html(result);
                    var modal = new bootstrap.Modal(document.getElementById('addCourseModal'));
                    modal.show();
                }
            });

        };
        $(document).on('submit', '#editCourseForm', function (e) {
            e.preventDefault(); // prevent page refresh
            console.log("hi");
            $.ajax({
                url: '/Admin/Course/SaveEditCourse',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {

                    if (response.success) {
                        // Set the message and show the modal
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    } else if (response.html) {
                        // Validation failed - replace the modal content with validation errors
                        $("#EditCourseModal").html(result);
                        var modal = new bootstrap.Modal(document.getElementById('editCourseModal'));
                        modal.show();
                    }else {

                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    }
                    
                },
                error: function (xhr, status, error) {
                    console.error("AJAX Error:", error);       // short message
                    console.error("Status:", status);          // status text (e.g. error, timeout)
                    console.error("Response:", xhr.responseText); // full response from server
                    alert("Error: " + error + "\n" + xhr.responseText); // optional alert
                }
              
            });
        });

        $(document).on('submit', '#courseForm', function (e) {
            e.preventDefault(); // prevent page refresh
            console.log("hi");
            $.ajax({
                url: '/Admin/Course/SaveNewCourse',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {

                    if (response.success) {
                        // Set the message and show the modal
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    } else if (response.html) {
                        // Validation failed - replace the modal content with validation errors
                        $("#AddCourseModal").html(result);
                        var modal = new bootstrap.Modal(document.getElementById('addCourseModal'));
                        modal.show();
                    } else {

                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    }

                },
                error: function (xhr, status, error) {
                    console.error("AJAX Error:", error);       // short message
                    console.error("Status:", status);          // status text (e.g. error, timeout)
                    console.error("Response:", xhr.responseText); // full response from server
                    alert("Error: " + error + "\n" + xhr.responseText); // optional alert
                }

            });
        });

        // Admin courses page functionality
        document.addEventListener('DOMContentLoaded', function () {
            // Update active navigation
            const navLinks = document.querySelectorAll('.admin-sidebar .nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function () {
                    navLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                });
            });

           
            // Search functionality
            const searchInput = document.querySelector('.search-box input');
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const courseCards = document.querySelectorAll('.course-card');

                courseCards.forEach(card => {
                    const courseTitle = card.querySelector('h6').textContent.toLowerCase();

                    if (courseTitle.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Course CRUD functions
        function editCourse(courseId) {
            console.log(courseId);
            $.ajax({
                url: "/Admin/Course/EditCourse?courseId=" + courseId, success: function (result) {


                    $("#EditCourseModal").html(result);
                    const editModal = new bootstrap.Modal(document.getElementById('editCourseModal'));
                    editModal.show();
                }
            });

           
        }

        function deleteCourse(courseId) {
            console.log(courseId);
            // Change modal content for confirmation
            $('#notificationModalLabel').text("Confirm Deletion");
            $('#notificationModalBody').text("Are you sure you want to delete this course? This action cannot be undone.");

            // Temporarily replace the footer with Cancel + Delete buttons
            var originalFooter = $('#notificationModal .modal-footer').html();
            $('#notificationModal .modal-footer').html(`
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn-sm" id="confirmDeleteBtn">Delete</button>
            `);

            // Show the modal
            $('#notificationModal').modal('show');

            // Bind Delete button action
            $(document).off('click', '#confirmDeleteBtn').on('click', '#confirmDeleteBtn', function () {
                $.ajax({
                    url: '/Admin/Course/DeleteCourse',
                    type: 'POST',
                    data: { id: courseId },
                    success: function (response) {
                        if (response.success) {
                            $('#notificationModalLabel').text("Success");
                            $('#notificationModalBody').text(response.message);
                            $('#notificationModal').on('hidden.bs.modal', function () {
                                location.reload();
                            });
                        } else {
                            $('#notificationModalLabel').text("Error");
                            $('#notificationModalBody').text(response.message);
                        }

                        // Restore footer back to original (OK button)
                        $('#notificationModal .modal-footer').html(originalFooter);

                        // Optionally remove course card from DOM if you have course-{id} wrapper
                        $(`#course-${courseId}`).fadeOut(500, function () {
                            $(this).remove();
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error:", error);
                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text("Error: " + error + "\n" + xhr.responseText);

                        // Restore footer to original
                        $('#notificationModal .modal-footer').html(originalFooter);
                    }
                });
            });
        }

       
    </script>
}
