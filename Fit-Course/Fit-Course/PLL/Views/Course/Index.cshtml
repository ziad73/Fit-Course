
   @{
    Layout = "_AdminLayout";
   }
<partial name="_NotificationModal" />
    <!-- Main Content -->
<div class="col-md-9 col-lg-10 p-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Course Management</h2>
            <p class="text-muted mb-0">Manage all courses, content, and learning materials.</p>
        </div>
        <div>
            <button class="btn btn-primary me-2" onclick="AddCourseModal()">
                <i class="fas fa-plus me-2"></i>Add New Course
            </button>
           
        </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="form-control" placeholder="Search courses...">
                </div>
            </div>
               
        </div>
    </div>

    <!-- Bulk Actions -->
    <div class="bulk-actions">
        <div class="row align-items-center">
           
            <div class="col-md-6 text-end">
                <button onclick="GetAllCourses()" class="btn btn-outline-success btn-sm">
                    All Selected
                </button>

                <button onclick="GetAllCoursesPublished()" class="btn btn-outline-success btn-sm">
                    Publish Selected
                </button>
                <button onclick="GetAllCoursesDraft()" class="btn btn-outline-danger btn-sm me-2">
                    Draft Selected
                </button>
            </div>
        </div>
    </div>

    <!-- Courses Grid -->
    
        <!-- Course Card  -->
       <div id="AllCourses">

       </div>
    
    <!-- Pagination -->
    <div class="pagination-container">
        <nav aria-label="Course pagination">
            <ul class="pagination justify-content-center mb-0">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
  </div>
       
<div id="AddCourseModal"></div>

<partial name="~/Views/Shared/Course/_EditCourse.cshtml" />


@section Scripts{
    <script>
        window.onload = async function () {
          
            await GetAllCourses();
        };
        function GetAllCourses() {

            console.log("hi");
            $.ajax({
                url: "/Course/AllCourses", success: function (result) {

                    $("#AllCourses").html(result);

                }
            });

        };
        function GetAllCoursesPublished() {

            console.log("hi");
            $.ajax({
                url: "/Course/AllCoursesPublished", success: function (result) {

                    $("#AllCourses").html(result);

                }
            });

        };
        function GetAllCoursesDraft() {

            console.log("hi");
            $.ajax({
                url: "/Course/AllCoursesDraft", success: function (result) {

                    $("#AllCourses").html(result);

                }
            });

        };
        function AddCourseModal() {

            console.log("hi");
            $.ajax({
                url: "/Course/AllCourses", success: function (result) {


                    $("#AddCourseModal").html(result);
                    var modal = new bootstrap.Modal(document.getElementById('addCourseModal'));
                    modal.show();
                }
            });

        };
        $(document).on('submit', '#courseForm', function (e) {
            e.preventDefault(); // prevent page refresh
            console.log("hi");
            $.ajax({
                url: '/Course/SaveNewCourse',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {

                    if (response.success) {
                        // Set the message and show the modal
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    } else if (response.html) {
                        // Validation failed - replace the modal content with validation errors
                        $("#AddCourseModal").html(result);
                        var modal = new bootstrap.Modal(document.getElementById('addCourseModal'));
                        modal.show();
                    }else {

                        $('#notificationModalLabel').text("Error");
                        $('#notificationModalBody').text(response.message);
                        $('#notificationModal').modal('show');
                    }
                    
                },
                error: function (xhr, status, error) {
                    console.error("AJAX Error:", error);       // short message
                    console.error("Status:", status);          // status text (e.g. error, timeout)
                    console.error("Response:", xhr.responseText); // full response from server
                    alert("Error: " + error + "\n" + xhr.responseText); // optional alert
                }
              
            });
        });
        // Admin courses page functionality
        document.addEventListener('DOMContentLoaded', function () {
            // Update active navigation
            const navLinks = document.querySelectorAll('.admin-sidebar .nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function () {
                    navLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                });
            });

           
            // Search functionality
            const searchInput = document.querySelector('.search-box input');
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const courseCards = document.querySelectorAll('.course-card');

                courseCards.forEach(card => {
                    const courseTitle = card.querySelector('h6').textContent.toLowerCase();

                    if (courseTitle.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Course CRUD functions
        function editCourse(courseId) {
            const editModal = new bootstrap.Modal(document.getElementById('editCourseModal'));
            editModal.show();
        }

        function deleteCourse(courseId) {
            if (confirm('Are you sure you want to delete this course? This action cannot be undone.')) {
                // Here you would typically make an API call to delete the course
                console.log('Deleting course:', courseId);
                // Remove the course card from the DOM
                const courseCard = document.querySelector(`[data-course-id="${courseId}"]`);
                if (courseCard) {
                    courseCard.remove();
                }
            }
        }
       
    </script>
}
