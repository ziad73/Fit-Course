@using BLL.DTOS.AccountDTOS
@model VerifyCodeDTO
@{
    ViewData["Title"] = "Verify Your Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <i class="fas fa-envelope text-primary" style="font-size: 3rem;"></i>
                    <h2 class="mt-3 mb-2">Check Your Email</h2>
                    <p class="text-muted">
                        We’ve sent a <strong>6-digit verification code</strong> to <b>@Model.Email</b>.
                        Enter the code below to continue.
                        Code will be expired after 10 minutes. 
                    </p>

                    <form method="post" asp-action="VerifyEmailCode" asp-controller="Account">
                        <input type="hidden" asp-for="Email" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>


                        <div class="mb-3">
                            <label asp-for="Code" class="form-label"></label>
                            <input asp-for="Code" class="form-control text-center" maxlength="6"
                                placeholder="Enter code" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            Verify Code
                        </button>
                    </form>
                    <p class="small text-muted">
                    <form method="post" asp-action="ResendCode" asp-controller="Account" class="d-inline">
                        <input type="hidden" name="email" value="@Model.Email" />
                        Didn’t receive the code?
                        <button type="submit" id="resendBtn" class="btn btn-link p-0 text-primary">
                            Resend
                        </button>
                    </form>
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>
